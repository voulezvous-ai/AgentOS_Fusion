{
  "plugins": {
    "docker": {}
  },
  "build": {
    "backend": {
      "dockerfilePath": "backend/Dockerfile",
      "context": "backend"
    },
    "frontend": {
      "dockerfilePath": "frontend/Dockerfile",
      "context": "frontend"
    }
  },
  "deploy": {
    "backend": {
      "startCommand": "/app/start.sh",
      "healthcheckPath": "/api/v1/healthcheck"
    },
    "frontend": {
      "startCommand": "npm run build && npm run preview",
      "healthcheckPath": "/"
    },
    "worker": {
      "startCommand": "/app/.venv/bin/celery -A app.worker.celery_app worker --loglevel=info",
      "context": "backend"
    }
  }
}