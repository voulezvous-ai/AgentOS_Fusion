# =====================================
# AgentOS Core - Backend Environment Variables
# =====================================

# --- Application Settings ---
PROJECT_NAME="AgentOS Core"
API_V1_STR="/api/v1"
LOG_LEVEL="INFO"
ALLOWED_HOSTS="http://localhost:5173,http://localhost:3000,https://your-frontend-domain.com"
DEFAULT_CURRENCY="BRL"

# --- Database & Cache ---
MONGODB_URI="mongodb://user:password@host:port/agentos_db?retryWrites=true&w=majority"
REDIS_URL="redis://host:port/0"

# --- Celery Task Queue ---
CELERY_BROKER_URL="redis://host:port/1"
CELERY_RESULT_BACKEND="redis://host:port/2"
CELERY_WORKER_CONCURRENCY="4"

# --- AI Services ---
OPENAI_API_KEY="sk-..."
OPENAI_CHAT_MODEL="gpt-4o"
GEMINI_MODEL="gemini-1.5-pro-latest"

# --- Embeddings & Vector Search ---
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSIONS=1536
MONGO_MEMORY_SEARCH_INDEX_NAME="vector_index_memories"

# --- Security ---
SECRET_KEY="!!!GENERATE_A_STRONG_SECRET_KEY_32_BYTES_HEX!!!"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="60"
API_KEY="!!!GENERATE_A_STRONG_STATIC_API_KEY!!!"

# --- Rate Limiting (SlowAPI) ---
# DEFAULT_RATE_LIMITS="100/minute,2000/hour"

# --- Monitoring & Error Tracking ---
SENTRY_DSN=""

# --- Uvicorn Worker Settings ---
# HOST="0.0.0.0"
# PORT="8000"
# WORKERS="4"